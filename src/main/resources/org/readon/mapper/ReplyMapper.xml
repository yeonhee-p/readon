<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.readon.mapper.ReplyMapper">

	<insert id="insert">
		insert into tbl_reply(bno,reply,replyer)
		values(#{bno},#{reply},#{replyer})
	</insert>
	<select id="getList" resultType="org.readon.domain.ReplyVO">
		select * from tbl_reply where bno=#{bno}
	</select>
	<update id="update">
		update tbl_reply
		set reply=#{reply},
		    updatedate=sysdate()
		where rno=#{rno}
	</update>
	<delete id="delete">
		delete from tbl_reply
		where rno=#{rno}
	</delete>
	
</mapper>